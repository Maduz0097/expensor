<%- include('partials/header') %>
<div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Expense Log</h1>

    <!-- Add Expense Form -->
    <details class="collapsible-section">
        <summary>Add New Expense</summary>
        <div class="form-card">
            <form action="/expenses" method="POST" class="form-group form-align">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" required>
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" required>
                <label for="category">Category:</label>
                <input type="text" id="category" name="category" required>
                <label for="amount">Amount (₨):</label>
                <input type="number" id="amount" name="amount" step="0.01" required>
                <label for="payment_method">Payment Method:</label>
                <input type="text" id="payment_method" name="payment_method">
                <label for="notes">Notes:</label>
                <textarea id="notes" name="notes"></textarea>
                <button type="submit">Add Expense</button>
            </form>
        </div>
    </details>

    <!-- Edit Expense Form -->
    <% if (editExpense) { %>
        <details class="collapsible-section" open>
            <summary>Edit Expense</summary>
            <div class="form-card">
                <form action="/expenses/edit/<%= editExpense.id %>" method="POST" class="form-group">
                    <label for="edit-date">Date:</label>
                    <input type="date" id="edit-date" name="date" value="<%= editExpense.date %>" required>
                    <label for="edit-description">Description:</label>
                    <input type="text" id="edit-description" name="description" value="<%= editExpense.description %>" required>
                    <label for="edit-category">Category:</label>
                    <input type="text" id="edit-category" name="category" value="<%= editExpense.category %>" required>
                    <label for="edit-amount">Amount (₨):</label>
                    <input type="number" id="edit-amount" name="amount" step="0.01" value="<%= editExpense.amount %>" required>
                    <label for="edit-payment_method">Payment Method:</label>
                    <input type="text" id="edit-payment_method" name="payment_method" value="<%= editExpense.payment_method %>">
                    <label for="edit-notes">Notes:</label>
                    <textarea id="edit-notes" name="notes"><%= editExpense.notes %></textarea>
                    <button type="submit">Update Expense</button>
                </form>
            </div>
        </details>
    <% } %>

    <!-- Expense Table -->
    <div class="table-container">
        <h2 class="text-lg font-semibold text-gray-700 p-4">Expense Records</h2>
        <% if (expenses && expenses.length > 0) { %>
            <table>
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Payment Method</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                <% expenses.forEach(item => { %>
                    <tr>
                        <td><%= item.date %></td>
                        <td><%= item.description %></td>
                        <td><%= item.category %></td>
                        <td>₨<%= item.amount.toFixed(2) %></td>
                        <td><%= item.payment_method || '' %></td>
                        <td><%= item.notes || '' %></td>
                        <td>
                            <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" href="/expenses/edit/<%= item.id %>">Edit</a>
                            <form action="/expenses/delete/<%= item.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this expense record?');">
                                <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-gray-500 text-sm p-4">No expense records available.</p>
        <% } %>
    </div>
</div>
<%- include('partials/footer') %>